<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/interpretation_body_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <org.dhis2.android.dashboard.ui.views.FontTextView
                    android:id="@+id/interpretation_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/navy_blue"
                    android:textSize="14sp"
                    app:font="@string/medium_font_name" />

                <org.dhis2.android.dashboard.ui.views.FontTextView
                    android:id="@+id/interpretation_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp"
                    app:font="@string/light_font_name" />
            </LinearLayout>

            <ImageView
                android:id="@+id/interpretation_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:background="@drawable/transparent_selector"
                android:contentDescription="@string/description"
                android:padding="4dp"
                android:src="@mipmap/ic_overflow" />
        </LinearLayout>

        <org.dhis2.android.dashboard.ui.views.FontTextView
            android:id="@+id/interpretation_text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:lines="2"
            android:singleLine="false"
            android:textSize="16sp"
            app:font="@string/condensed_font_name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey" />

        <FrameLayout
            android:id="@+id/interpretation_content"
            android:layout_width="match_parent"
            android:layout_height="280dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>