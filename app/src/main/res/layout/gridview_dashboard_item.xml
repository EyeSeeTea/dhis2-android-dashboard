<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <org.dhis2.android.dashboard.ui.views.FontTextView
                android:id="@+id/dashboard_item_last_updated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/description"
                android:textColor="@color/dark_grey"
                android:textSize="12sp"
                app:font="@string/light_font_name"/>

            <ImageView
                android:id="@+id/dashboard_item_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:adjustViewBounds="true"
                android:background="@drawable/transparent_selector"
                android:contentDescription="@string/description"
                android:src="@mipmap/ic_overflow"/>
        </LinearLayout>

        <org.dhis2.android.dashboard.ui.views.FontTextView
            android:id="@+id/dashboard_item_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:singleLine="true"
            android:textSize="16sp"
            app:font="@string/light_font_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey"/>

        <!-- This layout is used only in order to catch click events -->
        <RelativeLayout
            android:id="@+id/dashboard_item_body_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/transparent_selector"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/dashboard_item_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description"
                android:scaleType="centerCrop"/>

            <org.dhis2.android.dashboard.ui.views.FontTextView
                android:id="@+id/dashboard_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/navy_blue"
                android:textSize="17sp"
                app:font="@string/light_font_name"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>